<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".screen_mn_ki_kd_ipk">

    <TextView
        android:id="@+id/text_petunjukPenggunaan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtV_BTN_petunjukPenggunaan2"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_marginStart="44dp"
        android:background="@drawable/icn_kd_ipk_tanpatext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtV_BTN_home"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:tint="#4C4C4C"
        android:background="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="30dp"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="221dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtV_BTN_petunjukPenggunaan2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/tx_ki_kd" />

    <Button
        android:id="@+id/txtV_BTN_ki"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:background="#AEAFB9"
        android:padding="10dp"
        android:text="@string/kompetensi_inti_ki"
        android:fontFamily="@font/archivoblack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_petunjukPenggunaan2"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <Button
        android:id="@+id/txtV_BTN_ipk"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:background="#AEAFB9"
        android:padding="5dp"
        android:text="Indikator Pencapaian Kompetensi (IPK)
dan Tujuan Pembelajaran"

        android:fontFamily="@font/archivoblack"
        app:layout_constraintBottom_toBottomOf="@+id/text_petunjukPenggunaan2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753" />

    <Button
        android:id="@+id/txtV_BTN_kd"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:background="#AEAFB9"
        android:padding="5dp"
        android:text="KOMPETENSI DASAR (KD)"

        android:fontFamily="@font/archivoblack"
        app:layout_constraintBottom_toBottomOf="@+id/text_petunjukPenggunaan2"
        app:layout_constraintEnd_toEndOf="@+id/text_petunjukPenggunaan2"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@color/white"
        android:fontFamily="@font/archivoblack"
        android:text="~ Tidak ada jalan pintas untuk ke tempat yang layak dituju ~"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>