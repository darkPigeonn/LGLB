<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".screen_dtl_indktr_pencapaian_kptensi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bawah"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            tools:ignore="NotSibling">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/imageView2"
                    android:layout_width="309dp"
                    android:layout_height="103dp"
                    android:background="@drawable/bgjudul"
                    android:text="Indikator Pencapaian Kompetensi (IPK)
dan Tujuan Pembelajaran"
                    android:textSize="18sp"
                    android:fontFamily="@font/archivoblack"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.025"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1000dp"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bgkikd">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:src="@drawable/ipkisi" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:src="@drawable/tpisi" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bawah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/txtV_BTN_back"
                android:layout_width="47dp"
                android:layout_height="53dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_arrow_circle_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtV_BTN_home"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:fontFamily="@font/archivoblack"
                android:textColor="@color/black"
                android:text="~ Pendidikan adalah senjata paling ampuh untuk\nmengubah dunia ~"
                android:textAlignment="center"
                android:textSize="10sp"
                android:layout_gravity="bottom"
                tools:ignore="RtlCompat" />



        </LinearLayout>

        <TextView
            android:id="@+id/txtV_BTN_home"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:src="@drawable/ic_baseline_home_24"
            android:tint="#4C4C4C"
            android:background="@drawable/ic_home" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>